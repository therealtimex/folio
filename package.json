{
  "name": "@realtimex/folio",
  "version": "0.1.8",
  "type": "module",
  "main": "dist/api/server.js",
  "bin": {
    "folio": "./bin/folio.js",
    "folio-setup": "./bin/folio-setup.js",
    "folio-deploy": "./bin/folio-deploy.js"
  },
  "files": [
    "bin",
    "api",
    "dist",
    "docs-dev",
    "supabase",
    "scripts",
    "public",
    ".env.example",
    "tsconfig.json",
    "tsconfig.api.json",
    "vite.config.ts",
    "index.html",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch api/server.ts",
    "build": "npm run build:ui && npm run build:api",
    "build:ui": "vite build",
    "build:api": "tsc -p tsconfig.api.json",
    "preview": "vite preview",
    "serve": "node dist/api/server.js",
    "start": "node dist/api/server.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "migrate": "bash ./scripts/migrate.sh",
    "task": "node scripts/dev-task.mjs"
  },
  "keywords": [
    "folio",
    "realtimex",
    "desktop",
    "supabase",
    "local-app",
    "document-automation"
  ],
  "license": "MIT",
  "description": "Folio: local desktop app + remote Supabase + RealTimeX SDK backend runtime",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@realtimex/sdk": "^1.3.3",
    "@supabase/supabase-js": "^2.90.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "framer-motion": "^12.34.3",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.575.0",
    "multer": "^2.0.2",
    "next-themes": "^0.4.6",
    "pdf-parse": "^2.4.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
